import { useState, useEffect } from 'react';
import { portfolioAPI } from '../services/api';

interface Repository {
  id: string;
  repoName: string;
  language?: string;
  stars: number;
  codeQualityScore?: number;
  improvements: string[];
  highlights: string[];
}

interface PortfolioAnalysis {
  id: string;
  githubUsername?: string;
  overallScore: number;
  codeQualityScore?: number;
  diversityScore?: number;
  contributionScore?: number;
  summary: string;
  strengths: string[];
  weaknesses: string[];
  missingProjectTypes: string[];
  recommendations: any[];
  repositories: Repository[];
  createdAt: string;
}

export default function PortfolioAnalysis() {
  const [analyses, setAnalyses] = useState<PortfolioAnalysis[]>([]);
  const [stats, setStats] = useState<any>(null);
  const [selectedAnalysis, setSelectedAnalysis] = useState<PortfolioAnalysis | null>(null);
  const [githubUsername, setGithubUsername] = useState('');
  const [targetRole, setTargetRole] = useState('Software Engineer');
  const [loading, setLoading] = useState(false);

  useEffect(() => {
    loadData();
  }, []);

  const loadData = async () => {
    try {
      const [analysesRes, statsRes] = await Promise.all([
        portfolioAPI.getAnalyses(10),
        portfolioAPI.getStats(),
      ]);
      setAnalyses(analysesRes.data);
      setStats(statsRes.data);
    } catch (error) {
      console.error('Failed to load portfolio data:', error);
    }
  };

  const analyzeGitHub = async () => {
    if (!githubUsername.trim()) return;

    setLoading(true);
    try {
      const response = await portfolioAPI.analyzeGitHub(githubUsername, targetRole);
      setSelectedAnalysis(response.data);
      loadData();
    } catch (error: any) {
      console.error('Failed to analyze portfolio:', error);
      alert(error.response?.data?.error || 'Failed to analyze GitHub portfolio');
    } finally {
      setLoading(false);
    }
  };

  const viewAnalysis = (analysis: PortfolioAnalysis) => {
    setSelectedAnalysis(analysis);
  };

  const getScoreColor = (score: number) => {
    if (score >= 80) return 'text-green-600';
    if (score >= 60) return 'text-yellow-600';
    return 'text-red-600';
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-green-50 via-white to-blue-50 p-6">
      <div className="max-w-6xl mx-auto">
        <h1 className="text-4xl font-bold text-gray-800 mb-8">
          üíº Portfolio & GitHub Analysis
        </h1>

        {/* Stats Dashboard */}
        {stats && (
          <div className="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
            <div className="bg-white p-6 rounded-xl shadow-lg">
              <p className="text-gray-600 text-sm">Total Analyses</p>
              <p className="text-3xl font-bold text-green-600">{stats.totalAnalyses}</p>
            </div>
            <div className="bg-white p-6 rounded-xl shadow-lg">
              <p className="text-gray-600 text-sm">Avg Score</p>
              <p className="text-3xl font-bold text-blue-600">{stats.avgScore}/100</p>
            </div>
            <div className="bg-white p-6 rounded-xl shadow-lg">
              <p className="text-gray-600 text-sm">Total Repos Analyzed</p>
              <p className="text-3xl font-bold text-purple-600">{stats.totalRepositories}</p>
            </div>
            <div className="bg-white p-6 rounded-xl shadow-lg">
              <p className="text-gray-600 text-sm">Improvement</p>
              <p className="text-3xl font-bold text-orange-600">
                {stats.improvement > 0 ? '+' : ''}
                {stats.improvement}
              </p>
            </div>
          </div>
        )}

        {/* Analyze Form */}
        <div className="bg-white p-8 rounded-xl shadow-lg mb-8">
          <h2 className="text-2xl font-bold text-gray-800 mb-6">Analyze GitHub Profile</h2>

          <div className="space-y-4 mb-6">
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-2">
                GitHub Username
              </label>
              <input
                type="text"
                value={githubUsername}
                onChange={(e) => setGithubUsername(e.target.value)}
                placeholder="e.g., octocat"
                className="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500"
              />
            </div>

            <div>
              <label className="block text-sm font-medium text-gray-700 mb-2">
                Target Role (Optional)
              </label>
              <input
                type="text"
                value={targetRole}
                onChange={(e) => setTargetRole(e.target.value)}
                placeholder="e.g., Software Engineer"
                className="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500"
              />
            </div>
          </div>

          <button
            onClick={analyzeGitHub}
            disabled={loading || !githubUsername.trim()}
            className="w-full py-3 bg-green-600 text-white rounded-lg font-semibold hover:bg-green-700 disabled:opacity-50"
          >
            {loading ? 'Analyzing...' : 'Analyze Portfolio'}
          </button>
        </div>

        {/* Selected Analysis Details */}
        {selectedAnalysis && (
          <div className="bg-white p-8 rounded-xl shadow-lg mb-8">
            <div className="flex justify-between items-center mb-6">
              <h2 className="text-2xl font-bold text-gray-800">
                Analysis for @{selectedAnalysis.githubUsername}
              </h2>
              <button
                onClick={() => setSelectedAnalysis(null)}
                className="text-gray-600 hover:text-gray-800"
              >
                ‚úï
              </button>
            </div>

            {/* Score Cards */}
            <div className="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
              <div className="p-4 bg-gray-50 rounded-lg">
                <p className="text-sm text-gray-600 mb-1">Overall Score</p>
                <p className={`text-3xl font-bold ${getScoreColor(selectedAnalysis.overallScore)}`}>
                  {selectedAnalysis.overallScore}/100
                </p>
              </div>
              <div className="p-4 bg-gray-50 rounded-lg">
                <p className="text-sm text-gray-600 mb-1">Code Quality</p>
                <p className={`text-3xl font-bold ${getScoreColor(selectedAnalysis.codeQualityScore || 0)}`}>
                  {selectedAnalysis.codeQualityScore}/100
                </p>
              </div>
              <div className="p-4 bg-gray-50 rounded-lg">
                <p className="text-sm text-gray-600 mb-1">Diversity</p>
                <p className={`text-3xl font-bold ${getScoreColor(selectedAnalysis.diversityScore || 0)}`}>
                  {selectedAnalysis.diversityScore}/100
                </p>
              </div>
              <div className="p-4 bg-gray-50 rounded-lg">
                <p className="text-sm text-gray-600 mb-1">Contributions</p>
                <p className={`text-3xl font-bold ${getScoreColor(selectedAnalysis.contributionScore || 0)}`}>
                  {selectedAnalysis.contributionScore}/100
                </p>
              </div>
            </div>

            {/* Summary */}
            <div className="mb-6">
              <h3 className="text-lg font-semibold text-gray-800 mb-2">Summary</h3>
              <p className="text-gray-700">{selectedAnalysis.summary}</p>
            </div>

            {/* Strengths & Weaknesses */}
            <div className="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
              <div>
                <h3 className="text-lg font-semibold text-green-700 mb-3">‚úÖ Strengths</h3>
                <ul className="space-y-2">
                  {selectedAnalysis.strengths.map((strength, idx) => (
                    <li key={idx} className="flex items-start">
                      <span className="text-green-500 mr-2">‚Ä¢</span>
                      <span className="text-gray-700">{strength}</span>
                    </li>
                  ))}
                </ul>
              </div>
              <div>
                <h3 className="text-lg font-semibold text-red-700 mb-3">‚ö†Ô∏è Areas to Improve</h3>
                <ul className="space-y-2">
                  {selectedAnalysis.weaknesses.map((weakness, idx) => (
                    <li key={idx} className="flex items-start">
                      <span className="text-red-500 mr-2">‚Ä¢</span>
                      <span className="text-gray-700">{weakness}</span>
                    </li>
                  ))}
                </ul>
              </div>
            </div>

            {/* Recommendations */}
            <div className="mb-6">
              <h3 className="text-lg font-semibold text-gray-800 mb-3">üí° Recommendations</h3>
              <div className="space-y-3">
                {selectedAnalysis.recommendations.map((rec: any, idx: number) => (
                  <div key={idx} className="p-4 bg-blue-50 rounded-lg border border-blue-200">
                    <div className="flex items-center justify-between mb-2">
                      <h4 className="font-semibold text-gray-800">{rec.title}</h4>
                      <span className={`px-2 py-1 rounded text-xs font-semibold ${
                        rec.priority === 'HIGH' ? 'bg-red-200 text-red-800' :
                        rec.priority === 'MEDIUM' ? 'bg-yellow-200 text-yellow-800' :
                        'bg-green-200 text-green-800'
                      }`}>
                        {rec.priority}
                      </span>
                    </div>
                    <p className="text-gray-700 text-sm mb-1">{rec.description}</p>
                    <p className="text-blue-600 text-sm font-medium">Impact: {rec.impact}</p>
                  </div>
                ))}
              </div>
            </div>

            {/* Repositories */}
            <div>
              <h3 className="text-lg font-semibold text-gray-800 mb-3">
                üì¶ Repositories ({selectedAnalysis.repositories.length})
              </h3>
              <div className="space-y-3">
                {selectedAnalysis.repositories.map((repo) => (
                  <div key={repo.id} className="p-4 border border-gray-200 rounded-lg">
                    <div className="flex justify-between items-start mb-2">
                      <h4 className="font-semibold text-gray-800">{repo.repoName}</h4>
                      <div className="flex items-center space-x-3">
                        {repo.language && (
                          <span className="text-sm text-gray-600">{repo.language}</span>
                        )}
                        <span className="text-sm text-yellow-600">‚≠ê {repo.stars}</span>
                        {repo.codeQualityScore && (
                          <span className={`text-sm font-semibold ${getScoreColor(repo.codeQualityScore)}`}>
                            {repo.codeQualityScore}/100
                          </span>
                        )}
                      </div>
                    </div>
                    {repo.highlights.length > 0 && (
                      <div className="mb-2">
                        <p className="text-xs text-green-600 font-semibold mb-1">Highlights:</p>
                        <ul className="text-sm text-gray-600 space-y-1">
                          {repo.highlights.map((h, i) => (
                            <li key={i}>‚Ä¢ {h}</li>
                          ))}
                        </ul>
                      </div>
                    )}
                    {repo.improvements.length > 0 && (
                      <div>
                        <p className="text-xs text-orange-600 font-semibold mb-1">Improvements:</p>
                        <ul className="text-sm text-gray-600 space-y-1">
                          {repo.improvements.map((imp, i) => (
                            <li key={i}>‚Ä¢ {imp}</li>
                          ))}
                        </ul>
                      </div>
                    )}
                  </div>
                ))}
              </div>
            </div>
          </div>
        )}

        {/* Recent Analyses */}
        <div className="bg-white p-8 rounded-xl shadow-lg">
          <h2 className="text-2xl font-bold text-gray-800 mb-6">Recent Analyses</h2>
          {analyses.length === 0 ? (
            <p className="text-gray-500 text-center py-8">
              No analyses yet. Analyze your first GitHub portfolio!
            </p>
          ) : (
            <div className="space-y-4">
              {analyses.map((analysis) => (
                <div
                  key={analysis.id}
                  onClick={() => viewAnalysis(analysis)}
                  className="p-4 border border-gray-200 rounded-lg hover:shadow-md transition-shadow cursor-pointer"
                >
                  <div className="flex justify-between items-center">
                    <div>
                      <p className="font-semibold text-gray-800">
                        @{analysis.githubUsername}
                      </p>
                      <p className="text-sm text-gray-600">
                        {analysis.repositories.length} repositories analyzed
                      </p>
                    </div>
                    <div className="text-right">
                      <p className={`text-2xl font-bold ${getScoreColor(analysis.overallScore)}`}>
                        {analysis.overallScore}/100
                      </p>
                      <p className="text-xs text-gray-500">
                        {new Date(analysis.createdAt).toLocaleDateString()}
                      </p>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          )}
        </div>
      </div>
    </div>
  );
}
