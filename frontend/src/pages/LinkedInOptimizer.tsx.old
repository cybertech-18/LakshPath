import { useState, useEffect } from 'react';
import { linkedinAPI } from '../services/api';

interface LinkedInOptimization {
  id: string;
  targetRole?: string;
  currentHeadline?: string;
  optimizedHeadline: string;
  currentAbout?: string;
  optimizedAbout: string;
  keywords: string[];
  overallScore: number;
  beforeScore: number;
  afterScore: number;
  improvements: Array<{
    category: string;
    before: string;
    after: string;
    reason: string;
  }>;
  missingElements: string[];
  status: string;
  createdAt: string;
}

export default function LinkedInOptimizer() {
  const [optimizations, setOptimizations] = useState<LinkedInOptimization[]>([]);
  const [stats, setStats] = useState<any>(null);
  const [selectedOptimization, setSelectedOptimization] = useState<LinkedInOptimization | null>(null);
  const [loading, setLoading] = useState(false);

  // Form state
  const [targetRole, setTargetRole] = useState('');
  const [targetIndustry, setTargetIndustry] = useState('');
  const [currentHeadline, setCurrentHeadline] = useState('');
  const [currentAbout, setCurrentAbout] = useState('');

  useEffect(() => {
    loadData();
  }, []);

  const loadData = async () => {
    try {
      const [optimizationsRes, statsRes] = await Promise.all([
        linkedinAPI.getOptimizations(10),
        linkedinAPI.getStats(),
      ]);
      setOptimizations(optimizationsRes.data);
      setStats(statsRes.data);
    } catch (error) {
      console.error('Failed to load LinkedIn data:', error);
    }
  };

  const optimizeProfile = async () => {
    if (!targetRole.trim()) {
      alert('Please enter a target role');
      return;
    }

    setLoading(true);
    try {
      const response = await linkedinAPI.optimizeProfile({
        targetRole,
        targetIndustry: targetIndustry || undefined,
        currentHeadline: currentHeadline || undefined,
        currentAbout: currentAbout || undefined,
      });
      setSelectedOptimization(response.data);
      loadData();
    } catch (error: any) {
      console.error('Failed to optimize profile:', error);
      alert(error.response?.data?.error || 'Failed to optimize LinkedIn profile');
    } finally {
      setLoading(false);
    }
  };

  const viewOptimization = (optimization: LinkedInOptimization) => {
    setSelectedOptimization(optimization);
  };

  const updateStatus = async (optimizationId: string, status: 'DRAFT' | 'APPLIED' | 'ARCHIVED') => {
    try {
      await linkedinAPI.updateStatus(optimizationId, status);
      loadData();
      if (selectedOptimization?.id === optimizationId) {
        setSelectedOptimization({ ...selectedOptimization, status });
      }
    } catch (error) {
      console.error('Failed to update status:', error);
      alert('Failed to update status');
    }
  };

  const getScoreColor = (score: number) => {
    if (score >= 80) return 'text-green-600';
    if (score >= 60) return 'text-yellow-600';
    return 'text-red-600';
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50 p-6">
      <div className="max-w-6xl mx-auto">
        <h1 className="text-4xl font-bold text-gray-800 mb-8">
          üåü LinkedIn Profile Optimizer
        </h1>

        {/* Stats Dashboard */}
        {stats && (
          <div className="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
            <div className="bg-white p-6 rounded-xl shadow-lg">
              <p className="text-gray-600 text-sm">Total Optimizations</p>
              <p className="text-3xl font-bold text-blue-600">{stats.totalOptimizations}</p>
            </div>
            <div className="bg-white p-6 rounded-xl shadow-lg">
              <p className="text-gray-600 text-sm">Avg Improvement</p>
              <p className="text-3xl font-bold text-green-600">+{stats.avgImprovement}%</p>
            </div>
            <div className="bg-white p-6 rounded-xl shadow-lg">
              <p className="text-gray-600 text-sm">Applied</p>
              <p className="text-3xl font-bold text-purple-600">{stats.appliedCount}</p>
            </div>
            <div className="bg-white p-6 rounded-xl shadow-lg">
              <p className="text-gray-600 text-sm">Drafts</p>
              <p className="text-3xl font-bold text-orange-600">{stats.draftCount}</p>
            </div>
          </div>
        )}

        {/* Optimize Form */}
        <div className="bg-white p-8 rounded-xl shadow-lg mb-8">
          <h2 className="text-2xl font-bold text-gray-800 mb-6">Optimize Your Profile</h2>

          <div className="space-y-4 mb-6">
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-2">
                Target Role *
              </label>
              <input
                type="text"
                value={targetRole}
                onChange={(e) => setTargetRole(e.target.value)}
                placeholder="e.g., Senior Software Engineer"
                className="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
              />
            </div>

            <div>
              <label className="block text-sm font-medium text-gray-700 mb-2">
                Target Industry (Optional)
              </label>
              <input
                type="text"
                value={targetIndustry}
                onChange={(e) => setTargetIndustry(e.target.value)}
                placeholder="e.g., Technology, Finance, Healthcare"
                className="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
              />
            </div>

            <div>
              <label className="block text-sm font-medium text-gray-700 mb-2">
                Current Headline (Optional)
              </label>
              <input
                type="text"
                value={currentHeadline}
                onChange={(e) => setCurrentHeadline(e.target.value)}
                placeholder="Your current LinkedIn headline"
                className="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
              />
            </div>

            <div>
              <label className="block text-sm font-medium text-gray-700 mb-2">
                Current About Section (Optional)
              </label>
              <textarea
                value={currentAbout}
                onChange={(e) => setCurrentAbout(e.target.value)}
                placeholder="Your current LinkedIn about/summary section"
                rows={4}
                className="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
              />
            </div>
          </div>

          <button
            onClick={optimizeProfile}
            disabled={loading || !targetRole.trim()}
            className="w-full py-3 bg-blue-600 text-white rounded-lg font-semibold hover:bg-blue-700 disabled:opacity-50"
          >
            {loading ? 'Optimizing...' : 'Optimize My Profile'}
          </button>
        </div>

        {/* Selected Optimization Details */}
        {selectedOptimization && (
          <div className="bg-white p-8 rounded-xl shadow-lg mb-8">
            <div className="flex justify-between items-center mb-6">
              <h2 className="text-2xl font-bold text-gray-800">
                Optimization for {selectedOptimization.targetRole}
              </h2>
              <div className="flex items-center space-x-3">
                <select
                  value={selectedOptimization.status}
                  onChange={(e) => updateStatus(selectedOptimization.id, e.target.value as any)}
                  className="px-3 py-2 border border-gray-300 rounded-lg text-sm"
                >
                  <option value="DRAFT">Draft</option>
                  <option value="APPLIED">Applied</option>
                  <option value="ARCHIVED">Archived</option>
                </select>
                <button
                  onClick={() => setSelectedOptimization(null)}
                  className="text-gray-600 hover:text-gray-800"
                >
                  ‚úï
                </button>
              </div>
            </div>

            {/* Score Improvement */}
            <div className="grid grid-cols-3 gap-4 mb-6">
              <div className="p-4 bg-gray-50 rounded-lg text-center">
                <p className="text-sm text-gray-600 mb-1">Before</p>
                <p className={`text-3xl font-bold ${getScoreColor(selectedOptimization.beforeScore)}`}>
                  {selectedOptimization.beforeScore}/100
                </p>
              </div>
              <div className="p-4 bg-green-50 rounded-lg text-center">
                <p className="text-sm text-gray-600 mb-1">Improvement</p>
                <p className="text-3xl font-bold text-green-600">
                  +{selectedOptimization.afterScore - selectedOptimization.beforeScore}
                </p>
              </div>
              <div className="p-4 bg-gray-50 rounded-lg text-center">
                <p className="text-sm text-gray-600 mb-1">After</p>
                <p className={`text-3xl font-bold ${getScoreColor(selectedOptimization.afterScore)}`}>
                  {selectedOptimization.afterScore}/100
                </p>
              </div>
            </div>

            {/* Headline Comparison */}
            <div className="mb-6">
              <h3 className="text-lg font-semibold text-gray-800 mb-3">üìù Headline</h3>
              <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                {selectedOptimization.currentHeadline && (
                  <div className="p-4 bg-red-50 rounded-lg border border-red-200">
                    <p className="text-xs text-red-600 font-semibold mb-2">BEFORE</p>
                    <p className="text-gray-700">{selectedOptimization.currentHeadline}</p>
                  </div>
                )}
                <div className="p-4 bg-green-50 rounded-lg border border-green-200">
                  <p className="text-xs text-green-600 font-semibold mb-2">OPTIMIZED</p>
                  <p className="text-gray-700 font-medium">{selectedOptimization.optimizedHeadline}</p>
                </div>
              </div>
            </div>

            {/* About Section Comparison */}
            <div className="mb-6">
              <h3 className="text-lg font-semibold text-gray-800 mb-3">üìÑ About Section</h3>
              <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                {selectedOptimization.currentAbout && (
                  <div className="p-4 bg-red-50 rounded-lg border border-red-200 max-h-64 overflow-y-auto">
                    <p className="text-xs text-red-600 font-semibold mb-2">BEFORE</p>
                    <p className="text-gray-700 text-sm whitespace-pre-line">{selectedOptimization.currentAbout}</p>
                  </div>
                )}
                <div className="p-4 bg-green-50 rounded-lg border border-green-200 max-h-64 overflow-y-auto">
                  <p className="text-xs text-green-600 font-semibold mb-2">OPTIMIZED</p>
                  <p className="text-gray-700 text-sm font-medium whitespace-pre-line">{selectedOptimization.optimizedAbout}</p>
                </div>
              </div>
            </div>

            {/* Keywords */}
            <div className="mb-6">
              <h3 className="text-lg font-semibold text-gray-800 mb-3">üîë ATS Keywords</h3>
              <div className="flex flex-wrap gap-2">
                {selectedOptimization.keywords.map((keyword, idx) => (
                  <span
                    key={idx}
                    className="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-sm font-medium"
                  >
                    {keyword}
                  </span>
                ))}
              </div>
            </div>

            {/* Improvements */}
            <div className="mb-6">
              <h3 className="text-lg font-semibold text-gray-800 mb-3">‚ú® Key Improvements</h3>
              <div className="space-y-3">
                {selectedOptimization.improvements.map((imp, idx) => (
                  <div key={idx} className="p-4 bg-purple-50 rounded-lg border border-purple-200">
                    <p className="font-semibold text-purple-700 mb-1">{imp.category}</p>
                    <p className="text-sm text-gray-700 mb-2">{imp.reason}</p>
                    <div className="grid grid-cols-1 md:grid-cols-2 gap-2 text-sm">
                      <div>
                        <span className="text-red-600 font-semibold">Before: </span>
                        <span className="text-gray-600">{imp.before}</span>
                      </div>
                      <div>
                        <span className="text-green-600 font-semibold">After: </span>
                        <span className="text-gray-600">{imp.after}</span>
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            </div>

            {/* Missing Elements */}
            {selectedOptimization.missingElements && selectedOptimization.missingElements.length > 0 && (
              <div>
                <h3 className="text-lg font-semibold text-gray-800 mb-3">‚ö†Ô∏è Missing Elements</h3>
                <ul className="space-y-2">
                  {selectedOptimization.missingElements.map((element, idx) => (
                    <li key={idx} className="flex items-start">
                      <span className="text-orange-500 mr-2">‚Ä¢</span>
                      <span className="text-gray-700">{element}</span>
                    </li>
                  ))}
                </ul>
              </div>
            )}
          </div>
        )}

        {/* Recent Optimizations */}
        <div className="bg-white p-8 rounded-xl shadow-lg">
          <h2 className="text-2xl font-bold text-gray-800 mb-6">Recent Optimizations</h2>
          {optimizations.length === 0 ? (
            <p className="text-gray-500 text-center py-8">
              No optimizations yet. Optimize your first LinkedIn profile!
            </p>
          ) : (
            <div className="space-y-4">
              {optimizations.map((optimization) => (
                <div
                  key={optimization.id}
                  onClick={() => viewOptimization(optimization)}
                  className="p-4 border border-gray-200 rounded-lg hover:shadow-md transition-shadow cursor-pointer"
                >
                  <div className="flex justify-between items-center">
                    <div>
                      <p className="font-semibold text-gray-800">
                        {optimization.targetRole}
                      </p>
                      <p className="text-sm text-gray-600">
                        {optimization.status} ‚Ä¢ {optimization.keywords.length} keywords
                      </p>
                    </div>
                    <div className="text-right">
                      <p className="text-2xl font-bold text-green-600">
                        +{optimization.afterScore - optimization.beforeScore}
                      </p>
                      <p className="text-xs text-gray-500">
                        {new Date(optimization.createdAt).toLocaleDateString()}
                      </p>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          )}
        </div>
      </div>
    </div>
  );
}
