generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String?  @unique
  googleId     String?  @unique
  name         String?
  passwordHash String?
  role         String   @default("USER")
  avatarUrl    String?
  lastLoginAt  DateTime?
  loginCount   Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  quizResults           QuizResult[]
  insights              Insight[]
  goalContracts         GoalContract[]
  jdComparisons         JDComparison[]
  skillSnapshots        SkillSnapshot[]
  demoRuns              DemoRun[]
  roadmaps              LearningRoadmap[]
  loginLogs             LoginLog[]
  interviewSessions     InterviewSession[]
  portfolioAnalyses     PortfolioAnalysis[]
  linkedinOptimizations LinkedInOptimization[]
}

model QuizResult {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  answers    String
  summary    String
  strengths  String?
  weaknesses String?
  advice     String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  careerMatches CareerMatch[]
  roadmap        LearningRoadmap?
}

model CareerMatch {
  id           String     @id @default(cuid())
  quizResultId String
  quizResult   QuizResult @relation(fields: [quizResultId], references: [id], onDelete: Cascade)
  title        String
  matchScore   Int
  description  String
  avgSalary    String?
  growthRate   String?
  keySkills    String
  reason       String?
  createdAt    DateTime @default(now())
}

model LearningRoadmap {
  id           String    @id @default(cuid())
  quizResultId String?  @unique
  quizResult   QuizResult? @relation(fields: [quizResultId], references: [id], onDelete: Cascade)
  userId       String
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  title        String
  duration     String?
  summary      String?
  source       String    @default("gemini")
  aiPlan       String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  milestones RoadmapMilestone[]
}

model RoadmapMilestone {
  id          String           @id @default(cuid())
  roadmapId   String
  roadmap     LearningRoadmap  @relation(fields: [roadmapId], references: [id], onDelete: Cascade)
  title       String
  description String
  duration    String?
  status      String          @default("PENDING")
  resources   String?
  position    Int             @default(0)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  smartGoal   GoalContract?
}

model GoalContract {
  id              String            @id @default(cuid())
  userId          String
  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  milestoneId     String?           @unique
  milestone       RoadmapMilestone? @relation(fields: [milestoneId], references: [id])
  title           String
  description     String?
  startDate       DateTime
  endDate         DateTime
  successCriteria String
  streakCount     Int               @default(0)
  status          String            @default("ACTIVE")
  nudges          String?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
}

model Insight {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  source    String   @default("GEMINI")
  prompt    String
  response  String
  summary   String
  type      String
  metadata  String?
  createdAt DateTime @default(now())
}

model JDComparison {
  id             String   @id @default(cuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  jobTitle       String
  company        String?
  jobDescription String
  summary        String?
  matches        String?
  gaps           String?
  suggestions    String?
  fastTrack      String?
  source         String   @default("MANUAL")
  jobMeta        String?
  createdAt      DateTime @default(now())
}

model SkillSnapshot {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  skillName     String
  score         Int
  lastRefreshed DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  microTasks MicroTask[]

  @@unique([userId, skillName])
}

model MicroTask {
  id             String        @id @default(cuid())
  skillSnapshotId String
  skillSnapshot  SkillSnapshot @relation(fields: [skillSnapshotId], references: [id], onDelete: Cascade)
  title          String
  description    String?
  resourceUrl    String?
  status         String        @default("PENDING")
  createdAt      DateTime      @default(now())
  completedAt    DateTime?
}

model DemoRun {
  id        String   @id @default(cuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  scenario  String
  payload   String
  createdAt DateTime @default(now())
}

model MarketSnapshot {
  id        String   @id @default(cuid())
  domain    String
  source    String?
  payload   String
  metadata  String?
  createdAt DateTime @default(now())
}

model MarketBrief {
  id              String   @id @default(cuid())
  domain          String
  title           String
  deltaSummary    String
  recommendations String
  snapshotIds     String?
  metadata        String?
  createdAt       DateTime @default(now())
}

model LoginLog {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  method      String   // 'GOOGLE', 'EMAIL', 'DEMO'
  ipAddress   String?
  userAgent   String?
  success     Boolean  @default(true)
  failReason  String?
  createdAt   DateTime @default(now())
  
  @@index([userId, createdAt])
}

// ============================================
// INTERVIEW PRACTICE FEATURE
// ============================================

model InterviewSession {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type            String   // 'TECHNICAL', 'BEHAVIORAL', 'SYSTEM_DESIGN', 'CODING'
  difficulty      String   // 'EASY', 'MEDIUM', 'HARD'
  role            String?  // Target role: 'Software Engineer', 'Data Scientist', etc.
  status          String   @default("IN_PROGRESS") // 'IN_PROGRESS', 'COMPLETED', 'ABANDONED'
  overallScore    Float?
  feedback        String?  // Overall AI feedback
  speechAnalysis  String?  // JSON: confidence, filler words, pace, clarity
  duration        Int?     // Duration in seconds
  createdAt       DateTime @default(now())
  completedAt     DateTime?

  questions InterviewQuestion[]
  
  @@index([userId, createdAt])
}

model InterviewQuestion {
  id                String           @id @default(cuid())
  sessionId         String
  session           InterviewSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  questionText      String
  questionType      String           // 'TECHNICAL', 'BEHAVIORAL', 'CODING', 'PROBLEM_SOLVING'
  difficulty        String
  userAnswer        String?
  answerScore       Float?           // 0-100
  aiFeedback        String?          // Detailed feedback
  strengths         String?          // JSON array
  improvements      String?          // JSON array
  starAnalysis      String?          // For behavioral: Situation, Task, Action, Result analysis
  codeQuality       String?          // For coding: time complexity, code style, edge cases
  expectedAnswer    String?          // What a good answer looks like
  timeTaken         Int?             // Seconds
  createdAt         DateTime         @default(now())
  answeredAt        DateTime?
  
  @@index([sessionId])
}

// ============================================
// PORTFOLIO / GITHUB ANALYSIS FEATURE
// ============================================

model PortfolioAnalysis {
  id                   String   @id @default(cuid())
  userId               String
  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  githubUsername       String?
  portfolioUrl         String?
  overallScore         Float    // 0-100
  codeQualityScore     Float?   // 0-100
  diversityScore       Float?   // 0-100
  contributionScore    Float?   // 0-100
  summary              String
  strengths            String   // JSON array
  weaknesses           String   // JSON array
  missingProjectTypes  String?  // JSON array for target role
  recommendations      String   // JSON array
  targetRole           String?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  repositories RepositoryAnalysis[]
  
  @@index([userId, createdAt])
}

model RepositoryAnalysis {
  id                 String            @id @default(cuid())
  portfolioId        String
  portfolio          PortfolioAnalysis @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  repoName           String
  repoUrl            String
  description        String?
  language           String?
  stars              Int               @default(0)
  forks              Int               @default(0)
  lastCommit         DateTime?
  codeQualityScore   Float?            // Based on structure, documentation, tests
  complexity         String?           // 'LOW', 'MEDIUM', 'HIGH'
  hasReadme          Boolean           @default(false)
  hasTests           Boolean           @default(false)
  hasCi              Boolean           @default(false)
  readmeQuality      String?           // 'POOR', 'GOOD', 'EXCELLENT'
  improvements       String?           // JSON array
  highlights         String?           // JSON array
  createdAt          DateTime          @default(now())
  
  @@index([portfolioId])
}

// ============================================
// LINKEDIN PROFILE OPTIMIZER FEATURE
// ============================================

model LinkedInOptimization {
  id                  String   @id @default(cuid())
  userId              String
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  targetRole          String?
  targetIndustry      String?
  currentHeadline     String?
  optimizedHeadline   String
  currentAbout        String?
  optimizedAbout      String
  currentExperience   String?  // JSON array
  optimizedExperience String?  // JSON array with improved bullets
  keywords            String   // JSON array of ATS keywords
  overallScore        Float    // 0-100
  beforeScore         Float?   // 0-100
  afterScore          Float    // 0-100
  improvements        String   // JSON array of specific improvements made
  missingElements     String?  // JSON array
  status              String   @default("DRAFT") // 'DRAFT', 'APPLIED', 'ARCHIVED'
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  
  @@index([userId, createdAt])
}
